<div class="w-full h-96 p-5 justify-center items-center overflow-hidden  px-14 bg-white shadow overflow-x-hidden">

  <%= form_with model:[current_user, car] do |form| %>
  <div class="grid grid-cols-1 table-column space-y-2 ">
      <div class="flex justify-center mt-2 field" >
        <!-- <%= form.label :immatriculation, "immatriculation" %> -->
        <%= form.text_field :immatriculation, style:'width:50%;padding:12px 5px;border:none;background:#f5f5f5;border-radius:3px;', placeholder:'Immatriculation ex: 0145JK01' %>
        <% if car.errors[:immatriculation] %>
          <span style='color: red'><%= car.errors[:immatriculation][0] %></span>
        <% end %>
      </div>
      <div class="flex justify-center field">
        <!-- <%= form.label :couleur,"Couleur" %> -->
        <%= form.text_field :couleur, style:'width:50%;padding:12px 5px;border:none;background:#f5f5f5;border-radius:3px', placeholder:'couleur ex:rouge' %>
        <% if car.errors[:couleur] %>
          <span style='color: red'><%= car.errors[:couleur][0] %></span>
        <% end %>
      </div>
      <div class="flex justify-center field">
        <%= form.text_field :nbre_place, style:'width:50%;padding:12px 5px;border:none;background:#f5f5f5;border-radius:3px', placeholder:'nombre de place ex:36' %>
        <% if car.errors[:nbre_place] %>
          <span style='color: red'><%= car.errors[:nbre_place][0] %></span>
        <% end %>
      </div>
      <div class="flex justify-center field">
        <%= form.text_field :typ_car, style:'width:50%;padding:12px 5px;border:none;background:#f5f5f5;border-radius:3px', placeholder:'type de car ex:mini bus' %>
        <% if car.errors[:typ_car] %>
          <span style='color: red'><%= car.errors[:typ_car][0] %></span>
        <% end %>
      </div>
      <div class="flex justify-center">

        <% if car.persisted? %>
          <%= form.submit 'ModifiÃ©', style:"text-decoration:none;color:#fff;width:50%; padding:10px 0px; margin-top:2%; background:#4B6DE7; border:none;" %>
        <%else %>
          <%= form.submit 'Ajouter', style:"width:50%; margin:4% 0; padding:12px 0; border:none; color:#FFFFFF;border-radius:3px;", class: "bg-indigo-500" %>
        <%end%>
      </div>
    <% end %>

  </div>
</div>