<%= render partial:'header', locals:{car: @cars}%>

<main class="flex w-full h-screen">
  <%= render partial:'aside', locals:{car: @cars}  %>
  <section class="py-1 bg-blueGray-50 w-full">
    <div class="relative w-full px-4 max-w-full flex-grow flex-1 text-right mt-16">
      <button class="flex justify-center text-2xl bg-indigo-500 text-white active:bg-indigo-600 text-xs font-bold uppercase px-3 py-1 rounded outline-none focus:outline-none ml-96 mb-1 ease-linear transition-all duration-150" type="button">
        <%= link_to 'Ajouter un Car', new_user_car_path(current_user)%>
      </button>
    </div>
  <div class="w-full px-4 mx-auto mt-24">
    <div class="relative flex flex-col min-w-0 break-words bg-white w-full mb-6 shadow-lg rounded ">
      <div class="rounded-t mb-0 px-4 py-3 border-0">
        <div class="flex flex-wrap items-center">
          <div class="relative w-full px-4 max-w-full flex-grow flex-1">
            <h3 class="font-semibold text-base text-blueGray-700">Liste des cars des Rosiers</h3>
          </div>
          <div class="relative w-full px-4 max-w-full flex-grow flex-1 text-right">
            <button class="bg-indigo-500 text-white active:bg-indigo-600 text-xs font-bold uppercase px-3 py-1 rounded outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150" type="button">IMPRIMER <i class="fas fa-print"></i></button>
          </div>
        </div>
      </div>

      <div class="block w-full overflow-x-auto">
        <table class="items-center bg-transparent w-full border-collapse ">
          <thead>
            <tr>
              <th class="px-6 bg-blueGray-50 text-blueGray-500 align-middle border border-solid border-blueGray-100 py-3 text-xs uppercase border-l-0 border-r-0 whitespace-nowrap font-semibold text-left">
                immatriculation
              </th>
            <th class="px-6 bg-blueGray-50 text-blueGray-500 align-middle border border-solid border-blueGray-100 py-3 text-xs uppercase border-l-0 border-r-0 whitespace-nowrap font-semibold text-left">
              Couleur
            </th>
            <th class="px-6 bg-blueGray-50 text-blueGray-500 align-middle border border-solid border-blueGray-100 py-3 text-xs uppercase border-l-0 border-r-0 whitespace-nowrap font-semibold text-left">
              Nombre de Place
            </th>
            <th class="px-6 bg-blueGray-50 text-blueGray-500 align-middle border border-solid border-blueGray-100 py-3 text-xs uppercase border-l-0 border-r-0 whitespace-nowrap font-semibold text-left">
              Actions
            </th>
            </tr>
          </thead>

          <tbody>
            <% @cars.each do |car| %>
              <tr>
                <th class="border-t-0 px-6 align-middle border-l-0 border-r-0 text-xs whitespace-nowrap p-4 text-left text-blueGray-700 ">
                  <%= car.immatriculation %>
                </th>
                <td class="border-t-0 px-6 align-middle border-l-0 border-r-0 text-xs whitespace-nowrap p-4 ">
                  <%= car.couleur %>
                </td>
                <td class="border-t-0 px-6 align-center border-l-0 border-r-0 text-xs whitespace-nowrap p-4">
                  <%= car.nbre_place %>
                </td>
                <td class="border-t-0 px-6 align-middle border-l-0 border-r-0 text-xs whitespace-nowrap p-4">
                  <a href="<%= user_car_path(@current_user, car) %>
                  ">
                    <i class="far fa-eye text-emerald-500 mr-4"></i> 
                  </a>
                  <a href="<%= edit_user_car_path(@current_user, car) %>"
                    >
                      <i class="fas fa-edit text-blue-500 mr-4"></i> 
                  </a>

                  <a href="<%=user_car_path(@current_user,car.id)%>", data-method="delete" data-confirm="Are you sure?">
                      <i class="fas fa-trash-alt text-red-500"></i> 
                  </a>            
                </td>
            </tr>
            <% end %>
            
          </tbody>

        </table>
      </div>
    </div>
  </div>

  </section>
</main>

