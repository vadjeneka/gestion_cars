<div style="height:100vh; width:100vw; background:white;margin:0; display:flex">
  <div style='display:flex;background:white; width:55%; height:100%; overflow:hidden; position:relative;'>
    <%= image_tag ("undraw_proud1.png"), style:"object-fit:scale-down; width:100%" %>
    <div style="position:absolute; width:100%; height:100%;display:flex;justify-content:center; flex-wrap:wrap; align-content: space-around;">
      <p style="width:100%;display:flex;justify-content:center;margin-top:-10px;font-weight:bold;font-size:3rem;">
        
      </p>
      <p style="width:70%;display:flex;justify-content:center;margin-top:20%; text-align:center">
        La plateforme qui vous permet d'avoir une traçe de toute vos opérations
      </p>
    </div>
  </div>
  <div style='display:flex; width:45%; height:100%; background:rgba(64, 6, 131, 0.52); justify-content:center; align-items:start'>
    <div style='width:85%; height:90%; text-align:center'>
      <p style="width:100%; margin:20% 0 0 0; display:flex; justify-content:center; font-size:3rem;font-weight:bold">
        ROSIERS
      </p>
      <p style="width:100%; margin-bottom:20%; display:flex; justify-content:center; font-size:1rem;">
        Bienvenue sur aux ROSIERS !
      </p>
      <%= form_with url:login_path do |form| %>
        <%= form.email_field :email, placeholder:'noreply@example.ci', style: 'width:80%; margin:3% 0; padding:15px 5px; border:none;background:#f5f5f5; border-radius:3px'%>
        <%= form.password_field :password, placeholder:'Password', style: 'width:80%; margin:3% 0; padding:15px 5px; border:none;background:#f5f5f5; border-radius:3px' %>
        <%= form.submit 'Connexion', style: 'width:50%; margin:4% 0; padding:12px 0; border:none; background:#000033; color:#FFFFFF;border-radius:3px;' %>
      <% end %>
      <div>
      <span>Tu n'a pas de compte?</span>
      <%= link_to 'Créer Ton compte', new_user_path, style:'text-decoration:none; color:white;' %>
      </div>
    </div>
  </div>
</div>

